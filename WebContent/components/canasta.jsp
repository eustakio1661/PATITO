<div class="switcher-wrapper">
  <div class="switcher-btn"><i class="bx bx-shopping-bag"></i></div>
  <div class="switcher-body">
    <div class="d-flex align-items-center">
      <h5 class="mb-0 text-uppercase">Canasta de Compras</h5>
      <button
        type="button"
        class="btn btn-outline-secondary ms-auto close-switcher"
        aria-label="Close"
      >
        <i class="bx bx-minus-back"></i>
      </button>
    </div>
    <hr />
    <h6 class="mb-0">Productos seleccionados</h6>
    <hr />

    <div class="card card-block bg-faded">
      <div class="card-body">
        <div class="row">
          <div class="col-4">
            <img
              src="https://res.cloudinary.com/dfuuywyk9/image/upload/v1622821263/notfound_gwgndg.png"
              alt="Nombre producto"
              class="rounded img-fluid"
            />
          </div>
          <div class="col-6">
            <p class="card-title"><b>Nombre del producto</b></p>
            <p>Cantidad : <span>5</span></p>
          </div>
          <div class="col-2">
            <button
              type="button"
              class="
                btn btn-outline-danger btn-close
                ms-auto
                btn-danger btn-quitar-producto
              "
              aria-label="Close"
              data-idProd="1"
              data-cantiComprada="1"
            ></button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
